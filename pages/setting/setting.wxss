/* pages/usercenter/usercenter.wxss */
.usertop{
  background: #ffffff;
  height: 150rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f4f4f4
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 20rpx 0 30rpx
}
.arr{
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx
}
.name{
  flex: 1;
  font-size: 35rpx;
  margin-left: 30rpx
}
.user-box{
  height: 100rpx;
  display: flex;
  align-items: center;
  background: #ffffff;
}
.user-box image{
  width: 20rpx;
  height: 30rpx;
  margin-right: 30rpx
}
.userccenter{
  background: #f4f4f4
}
.text{
  flex: 1;
  margin-left: 30rpx;
  font-size: 32rpx
}
.subtitle{
  color: #999999;
  margin-right: 30rpx
}