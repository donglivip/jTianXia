}
swiper image{
  width: 100%;
  height: 100%
}
swiper image,swiper{
  width: 100%;
  height: 400rpx
}
.likedetail{
  background: #f4f4f4
}
.title{
  background: #ffffff;
  height: 80rpx;
  line-height: 80rpx;
  text-indent: 20rpx
}
.main{
  height: calc(100% - 100rpx)
}
.bottom{
  height: 100rpx;
  display: flex;
  align-items: center;
  bottom: 0;
  background: #ffffff
}
