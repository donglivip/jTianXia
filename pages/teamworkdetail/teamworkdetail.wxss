/* pages/likedetail/likedetail.wxss */
swiper image{
  width: 100%;
  height: 100%
}
.likedetail{
  background: #f4f4f4
}
.title{
  background: #ffffff;
  height: 80rpx;
  line-height: 80rpx;
  text-indent: 20rpx
}
.main{
  height: calc(100% - 100rpx)
}
.bottom{
  height: 100rpx;
  display: flex;
  align-items: center;
  bottom: 0;
  background: #ffffff
}
.bottom view{
  flex: 1;
  display: flex;
  justify-content: center;
  height: 100rpx;
  line-height: 100rpx
}
.bottom .yellow{
  background: #FF9222;
  color: #ffffff
}
.box{
  display: flex;
  height: 100rpx;
  align-items: center;
  width: 100%;
  background: #ffffff;
  border-bottom: 1rpx solid #f4f4f4
}
.text{
  flex: 1;
  text-align: right;
  margin-right: 20rpx
}
.bottom image{
  width: 50rpx;
  height: 50rpx
}
.img-box{
  height: 100rpx;
  display: flex;
  align-items: center
}
.img-box{
  flex: none!important;
  width: 150rpx
}
.top{
 display: flex;
 align-items: center;
 height: 150rpx;
 background: #ffffff
}
.top image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx
}
.name{
  flex: 1
}
.state{
  margin-right: 20rpx;
  border: 1rpx solid #999999;
  padding: 10rpx 30rpx;
  border-radius: 15rpx;
  color: #999999
}