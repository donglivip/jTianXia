  background: #ff7714;
  color: #fff;
  width: 140rpx;
  height: 68rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx
}
.adver01{
  background: #fff;
  margin-top: 20rpx;
  display: flex;
}
.adver-box{
  position: relative;
  height: 266rpx;
  flex: 1
}
.adver-box image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
 
}
.adver-box view{
  position: relative;
  z-index: 5;
  color: #686868
}
.adver-title{
  line-height: 60rpx;
  text-indent: 20rpx
}
.adver-text{
  width: calc(100% - 40rpx);
  margin: 0 auto;
  height: calc(100% - 60rpx);
  display: flex;
  align-items: center;
  justify-content: center
}
.mytitle{
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 20rpx;
  background: #fff;
  margin-top: 20rpx
}
.mytitle image{
  width: 16rpx;
  height: 28rpx
}
.mytitle view{
  flex: 1
}
.shop-box{
  display: flex;
  background: #fff;
  padding: 20rpx;
}
.shop-box image{
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx
}
.shop-sub{
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #686868
}
.shop-main{
  flex: 1
}
.shop-title{
  font-size:38rpx;
  line-height: 60rpx;
  height:60rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx
}
.price{
  color: red;
  font-weight: 600;
  font-size: 38rpx
}